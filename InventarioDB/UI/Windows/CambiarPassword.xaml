<Window x:Class="InventarioDB.UI.Windows.CambiarPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioDB.UI.Windows"
        mc:Ignorable="d"
        Title="Cambiar contraseña" 
        Height="350" 
        Width="400" 
        WindowStartupLocation="CenterScreen" 
        Icon="/Resources/icon.ico" 
        ResizeMode="NoResize" 
        Background="#FF282727"
        Loaded="Window_Loaded">

    <Border Padding="15" Background="#FF1E1E1E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <StackPanel Grid.Row="0" Margin="0,10,0,30">
                <TextBlock Text="Cambio de contraseña"
                         FontSize="24"
                         FontWeight="SemiBold"
                         Foreground="ForestGreen"
                         HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Campos de contraseña -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Contraseña actual:" Foreground="White" Margin="0,0,0,8" HorizontalAlignment="Left"/>
                <PasswordBox x:Name="contraseñaActualBox"
                           Background="#FF333333"
                           Foreground="White"
                           BorderBrush="#FF444444"
                           BorderThickness="1"
                           Padding="10,8"
                           Height="35"
                           VerticalContentAlignment="Center">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#FF666666"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#FF0078D4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <TextBlock Text="Nueva contraseña:" Foreground="White" Margin="10,10,0,8" HorizontalAlignment="Left"/>
                <PasswordBox x:Name="contraseñaNuevaBox"
                           Background="#FF333333"
                           Foreground="White"
                           BorderBrush="#FF444444"
                           BorderThickness="1"
                           Padding="10,8"
                           Height="35"
                           VerticalContentAlignment="Center">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#FF666666"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#FF0078D4"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>
            </StackPanel>

            <!-- Botones -->
            <StackPanel x:Name="BotonesCambioPass" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="CambiarPassbtn"
                        Content="Actualizar contraseña"
                        Click="CambiarPassbtn_Click"
                        Width="150"
                        Margin="0,0,10,0"
                        Padding="15,10"
                        Background="ForestGreen"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF1884D7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF006CBE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="VolverLogin"
                        Content="Volver al login"
                        Click="VolverLogin_Click"
                        Width="150"
                        Margin="10,0,0,0"
                        Padding="15,10"
                        Background="#FF333333"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF444444"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF222222"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>